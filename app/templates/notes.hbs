
<section class='input'>
  {{textarea placeholder="Add a note!" class="input-body"
    value=noteCopy action='newNote' autofocus='true'}}
  <div class='input-preview'>
    {{noteCopy}}
  </div>
  <section class  = "note-actions">
    <button {{action 'newNote'}}>Save Note</button>
  </section>
</section>

<section class='notes'>
  {{#each note in model}}
    <div class='note'>
      {{note.body}}
    </div>
  {{/each}}
</section>

{{outlet}}
